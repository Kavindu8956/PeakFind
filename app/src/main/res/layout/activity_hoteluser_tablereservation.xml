<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/unnamed"
    android:padding="5dp"
    tools:context=".HotelUserTableReservation">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/HotelTopic"
            android:layout_width="400dp"
            android:layout_height="55dp"
            android:textAlignment="center"
            android:textColor="@color/colorAccent1"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginTop="110dp"
            android:background="@drawable/input_shape"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/input_shape"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="20sp" />


        <LinearLayout

            android:layout_width="400dp"
            android:layout_height="41dp"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/DatePicker"
                android:layout_width="119dp"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_button2"
                android:text="@string/datebutton"
                android:textColor="@android:color/background_light" />

            <TextView
                android:id="@+id/viewDate"
                android:layout_width="280dp"
                android:layout_height="41dp"
                android:layout_marginLeft="5dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="41dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/DisplayTime"
                android:layout_width="119dp"
                android:layout_height="match_parent"
                android:background="@drawable/input_shape"
                android:text="@string/TimeSelect"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="16sp" />
            <Spinner
                android:id="@+id/spinnerTime"
                android:layout_width="267dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@drawable/input_shape"
                android:textAlignment="center" />




        </LinearLayout>

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="41dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/DisplayPeople"
                android:layout_width="119dp"
                android:layout_height="41dp"
                android:background="@drawable/input_shape"
                android:text="@string/Peopleselect"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spinnerPeople"
                android:layout_width="267dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@drawable/input_shape"
                android:textAlignment="center" />




        </LinearLayout>


        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="61dp"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/MakeReserve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/custombutton"
                android:text="@string/Reservation"
                android:textSize="18dp" />


        </LinearLayout>

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="20dp"
            android:background="?android:attr/listDivider"
            android:visibility="visible" />

    </LinearLayout>


</ScrollView>