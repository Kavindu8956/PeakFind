<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Resturent_Form"
    android:background="@drawable/img4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginTop="15dp"
            android:text="Hotel and Restaurant  Details"
            android:textAlignment="center"
            android:textColor="@color/colorAccent1"
            android:textSize="25dp"
            android:textStyle="bold"

            />




        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtName1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:hint="Full Name"
                android:paddingTop="10dp"
                android:text="Bhagya Devduni"
                android:textColor="@color/colorAccent1"
                android:textSize="15dp"
                android:textStyle="bold" />


        </com.google.android.material.textfield.TextInputLayout>







        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:errorEnabled="true"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtMail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:hint="Email Address"
                android:text="Amaya@gmail.com"
                android:textColor="@color/colorAccent1"
                android:textSize="15dp"
                android:textStyle="bold"


                />

        </com.google.android.material.textfield.TextInputLayout>





/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtPhoneNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:hint="Phone Number"
                android:text="081-2265896"
                android:textColor="@color/colorAccent1"
                android:textSize="15dp"
                android:textStyle="bold"
                />



        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtLocation1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:hint="Location"
                android:text="Kandy"
                android:textColor="@color/colorAccent1"
                android:textSize="15dp"
                android:textStyle="bold" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtHotelName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:hint="Name of the Resturent or Hotel"
                android:text="Amaya Hotel &amp; Restuarent"
                android:textColor="@color/colorAccent1"
                android:textSize="15dp"
                android:textStyle="bold" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtWebSite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:hint="Web site"
                android:text="www.AmayaHotel.lk"
                android:textColor="@color/colorAccent1"
                android:textSize="15dp"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>






        <TextView
            android:id="@+id/textView39"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="Open Time"
            android:textColor="@color/colorAccent1"
            android:textSize="15dp"
            android:textStyle="bold"

            />


        <EditText
            android:id="@+id/txtOpen"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="time"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"

            />




        <TextView
            android:id="@+id/txtClose"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="Close Time"
            android:textColor="@color/colorAccent1"
            android:textSize="15dp"
            android:textStyle="bold"

            />


        <EditText
            android:id="@+id/editText46"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="time"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="Star of Hotel"
            android:textColor="@color/colorAccent1"
            android:textSize="15dp"
            android:textStyle="bold"

            />

        <Spinner
            android:id="@+id/StarOfHotel"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:entries="@array/StarHotel"
            android:backgroundTint="@color/colorAccent1"
            android:background="@color/black_overlay"
            android:layout_marginLeft="50dp"
            android:textAlignment="center"



            />

        <TextView
            android:id="@+id/Menu"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="Menu "
            android:textColor="@color/colorAccent1"
            android:textSize="15dp"
            android:textStyle="bold"

            />


        <ImageView
            android:id="@+id/MenuImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/download"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="50dp"

            />


        <Button
            android:id="@+id/MenuBtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="ADD"
            android:textSize="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/colorPrimary"
            android:layout_marginLeft="20dp"
            />




        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="Breakfast include"
            android:textColor="@color/colorAccent1"
            android:textSize="15dp"
            android:textStyle="bold"

            />


        <Spinner
            android:id="@+id/BreakfastInclude"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:entries="@array/Breakfast"
            android:background="@color/black_overlay"
            android:layout_marginLeft="50dp"
            />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Facilities"
            android:layout_marginTop="15dp"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorAccent1"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginRight="20dp"

            />

        <CheckBox
            android:id="@+id/checkBoxParking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Free Parking"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
            />

        <CheckBox
            android:id="@+id/checkBoxFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Food and drink"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="20dp"
            />

        <CheckBox
            android:id="@+id/checkBoxCar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Car Hire"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"/>

        <CheckBox
            android:id="@+id/checkBoxFree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Free Wifi"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="20dp"
            />


        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activity and Entertainment"
            android:layout_marginTop="3dp"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorAccent1"
            android:textStyle="bold"

            />

        <CheckBox
            android:id="@+id/Gym"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gym"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="20dp"
            />

        <CheckBox
            android:id="@+id/playGround"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Play Ground"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="20dp"
            />

        <CheckBox
            android:id="@+id/children"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Children Park"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="20dp"
            />

        <CheckBox
            android:id="@+id/Massage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Massage Center"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="20dp"
            />

        <CheckBox
            android:id="@+id/outpool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="outdoor pool"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="20dp"
            />


        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="ROOMS"
            android:textColor="@color/colorAccent1"
            android:textSize="15dp"
            android:textStyle="bold"

            />

        <CheckBox
            android:id="@+id/cbsingle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Single 3000/="
            android:layout_marginTop="3dp"
            android:layout_marginLeft="20dp"
            />

        <CheckBox
            android:id= "@+id/cbdouble"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Double 6000/="
            android:layout_marginTop="3dp"
            android:layout_marginLeft="20dp"
            />

        <CheckBox
            android:id="@+id/cbluxuary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Luxury 30 000/="
            android:layout_marginTop="3dp"
            android:layout_marginLeft="20dp"
            />

        <CheckBox
            android:id="@+id/cbfamily"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Family  60 000/="
            android:layout_marginTop="3dp"
            android:layout_marginLeft="20dp"
            />


        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload image of the Hotel or Resturent"
            android:layout_marginTop="15dp"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorAccent1"
            android:textStyle="bold"

            />


        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/download"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="50dp"

            />

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="upload"
            android:textSize="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/colorPrimary"
            android:layout_marginLeft="20dp"
            />


        <Button
            android:id="@+id/btnSave"
            android:layout_width="425dp"
            android:layout_height="wrap_content"
            android:text="Sava Details"
            android:background="@drawable/custombutton"
            android:textSize="15dp"
            android:layout_marginTop="15dp"
            android:onClick="SaveDetails"


            />






    </LinearLayout>
</ScrollView>