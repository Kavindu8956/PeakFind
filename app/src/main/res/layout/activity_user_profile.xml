<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/unnamed"
    tools:ignore="ExtraText">
    tools:context=".UserInsertActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewProfilePic"
            android:layout_width="156dp"
            android:layout_height="138dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/prof"
            tools:layout_editor_absoluteX="115dp"
            tools:layout_editor_absoluteY="30dp" />

        <ProgressBar
            android:visibility="gone"
            android:id="@+id/progressBarUpload"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>


    <EditText
        android:id="@+id/editTextContactNumber"
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="340dp"
        android:ems="10"
        android:hint="@string/entercontactnumber"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView36"
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="180dp"
        android:text="@string/textp1"
        android:textColor="@color/colorAccent1"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextDisplayName"
        android:layout_width="372dp"
        android:layout_height="55dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="220dp"
        android:ems="10"
        android:hint="@string/entername"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView37"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="300dp"
        android:text="@string/contactnumber"
        android:textColor="@color/colorAccent1"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextAddress"
        android:layout_width="374dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="460dp"
        android:ems="10"
        android:hint="@string/enteraddress"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnSaveDetails"
        android:layout_width="218dp"
        android:layout_height="40dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="520dp"
        android:background="@drawable/custombutton"
        android:text="@string/btn"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView38"
        android:layout_width="287dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="420dp"
        android:text="@string/uaddress"
        android:textColor="@color/colorAccent1"
        android:textSize="24sp" />



</RelativeLayout>